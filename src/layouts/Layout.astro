---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <style is:global>
      body { font-family: system-ui, sans-serif; background: #0d1117; color: #c9d1d9; margin: 0; line-height: 1.6; }
      nav { background: #161b22; padding: 1rem; text-align: center; border-bottom: 1px solid #30363d; }
      nav a { color: #58a6ff; margin: 0 1rem; text-decoration: none; font-weight: bold; }
      nav a:hover { color: #ffffff; }
      main { max-width: 800px; margin: 2rem auto; padding: 0 1rem; }
      h1, h2 { color: #58a6ff; border-bottom: 1px solid #30363d; padding-bottom: 0.5rem; }
      .card { background: #161b22; border: 1px solid #30363d; padding: 1.5rem; margin-bottom: 1rem; border-radius: 6px; }
      .tag { display: inline-block; padding: 2px 8px; border-radius: 12px; font-size: 0.8rem; font-weight: bold; margin-left: 10px; }
      .done { background: #238636; color: white; }
      .wip { background: #9e6a03; color: white; }
      a.btn { display: inline-block; background: #238636; color: white; padding: 0.5rem 1rem; text-decoration: none; border-radius: 6px; margin-top: 1rem; }
    </style>
  </head>
  <body>
    <nav>
      <a href="/">HOME</a>
      <a href="/homelab">HOMELAB PROGRESS</a>
      <a href="/resume">RESUME</a>
    </nav>
    <main>
      <slot />
    </main>
  </body>
</html>
